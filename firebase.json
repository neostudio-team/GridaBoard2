{
  "hosting": [{
    "target" : "firebase",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },{
    "target" : "ndp",
    "public": "build",
    "ignore": [
